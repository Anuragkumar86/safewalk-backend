generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String             @id @default(uuid())
  email             String             @unique
  password          String
  name              String
  phoneNumber       String?
  contacts          EmergencyContact[]
  walkSessions      WalkSession[]
  createdAt         DateTime           @default(now())
}

model EmergencyContact {
  id          String   @id @default(uuid())
  name        String
  email       String
  phoneNumber String?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model WalkSession {
  id             String    @id @default(uuid())
  status         String    @default("ACTIVE") // ACTIVE, SAFE, DANGER
  startTime      DateTime  @default(now())
  endTime        DateTime?
  lastKnownLat   Float?
  lastKnownLng   Float?
  bullMqJobId    String
  userId         String
  user           User      @relation(fields: [userId], references: [id])
}
